<% layout('/layout/boilerplate.ejs') -%>
<body>
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Create New Listing</h1>
                <form method="post" action="/listings">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" id="title" name="listing[title]" placeholder="title" class="form-control" >
                
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control"  id="description" cols="30" rows="10" placeholder="describe about place"></textarea>
                
                    <label for="image" class="form-label">Image</label>
                    <input type="text" id="image" name="listing[image]" class="form-control"  placeholder="link/URL">
                
                    <label for="price" class="form-label">Price</label>
                    <input type="number" id="price" name="listing[price]" class="form-control"  placeholder="charges per day">
                
                    <label for="country" class="form-label">Country</label>
                    <input id="country" type="text" class="form-control"  name="listing[country]">
                
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" id="location" name="listing[location]">
                    <br>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
        </div>
        <br>
    </form>
</body>

    
    