<% layout('/layout/boilerplate.ejs') -%>
<body>
        <div class="row">
            <div class="col-8 offset-2">
                <h1>Create New Listing</h1>
                <form method="post" action="/listings" novalidate class="needs-validation">
                    <div class="md-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" name="listing[title]" placeholder="title" class="form-control" required >
                        <div class="valid-feedback">
                            Title Looks Good!
                        </div>
                        <div class="invalid-feedback">
                           Please add title
                        </div>
                    </div>
                    
                    <div class="md-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" class="form-control"  id="description" cols="30" rows="10" placeholder="describe about place" required></textarea>
                        <div class="valid-feedback">
                            Great Description!
                        </div>
                        <div class="invalid-feedback">
                            Please add description
                        </div>
                    </div>
                    
                    <div class="md-3">
                        <label for="image" class="form-label">Image</label>
                        <input type="text" id="image" name="listing[image]" class="form-control"  placeholder="link/URL" required>
                        <div class="valid-feedback">
                            Nice Image!
                        </div>
                        <div class="invalid-feedback">
                            Please add image
                        </div>
                    </div>
                    
                    <div class="md-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" id="price" name="listing[price]" class="form-control"  placeholder="charges per day" required>
                        <div class="valid-feedback">
                            Affortable Price!
                        </div>
                        <div class="invalid-feedback">
                            Please write price
                        </div>
                    </div>
                    
                    <div class="md-3">
                        <label for="country" class="form-label">Country</label>
                        <input id="country" type="text" class="form-control"  name="listing[country]" required>
                        <div class="valid-feedback">
                            Nice Country!
                        </div>
                        <div class="invalid-feedback">
                            Please add Country Name
                        </div>
                    </div>
                    
                    <div class="md-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" class="form-control" id="location" name="listing[location]" required>
                        <div class="valid-feedback">
                            What a Location!
                        </div>
                        <div class="invalid-feedback">
                            Please add Location
                        </div>
                    </div>
                    <br>
                    <button class="btn btn-outline-dark">Submit</button>
                </form>
            </div>
        </div>
        <br>
    </form>
</body>

    
    