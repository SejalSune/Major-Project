<% layout('/layout/boilerplate.ejs') -%>
<body>
    <h1>All List</h1>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
        <% for (let listing of alllist) { %>
            <a href="/listings/<%=listing._id%>">
                <div class="card" style="width: 25rem;">
                    <div class="card-img-overlay"></div>
                    <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" height="250rem">
                    <div class="card-body">
                        <p class="card-text"><b><%=listing.title%>, <%=listing.location%></b><br>&#8377;<%=listing.price.toLocaleString("en-IN")%> Night</p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</body>