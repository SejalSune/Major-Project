<% layout('/layout/boilerplate.ejs') -%>
<body>

    <div class="row">
        <div class="col-8 offset-2">
        <h1>Edit Listing</h1>
        <form action="/listings/<%=listing._id%>?_method=PUT" method="post">

        <div class="md-3">
            <label for="title" class="form-label">Title</label>
            <input id="title" class="form-control" type="text" name="listing[title]" value="<%=listing.title%>">
        </div>
        <br>
        <div class="md-3">
            <label for="description" class="form-label">Description</label>
            <textarea id="description" class="form-control" name="listing[description]" cols="30" rows="10"><%=listing.description%></textarea>
        </div>
        <br>
        <div class="md-3">
            <label for="image" class="form-label">Image</label>
            <input id="image" type="text" class="form-control" name="listing[image]" value="<%=listing.image%>">
        </div>
        <br>
        <div class="row">
            <div class="col-4">
                <div class="md-3">
                    <label for="price" class="form-label">Price</label>
                    <input id="price" type="number" class="form-control" name="listing[price]" value="<%=listing.price%>">
                </div>
            </div>

            <div class="col-8">
                <div class="md-3">
                    <label for="country" class="form-label">Country</label>
                    <input id="country" type="text" class="form-control" name="listing[country]" value="<%=listing.country%>">
                </div>
            </div>
        </div>
        <br>
        <div class="md-3">
            <label for="location" class="form-label">Location</label>
            <input id="location" type="text" class="form-control" name="listing[location]" value="<%=listing.location%>">
        </div>

        <br>
        <button style="margin-bottom: 0.8rem;" class="btn btn-outline-dark">Edit</button>
    </form>
        </div>
    </div>
</body>